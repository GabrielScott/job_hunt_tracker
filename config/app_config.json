{
    "app": {
        "name": "Job Hunt & Study Tracker",
        "version": "1.0.1"
    },
    "database": {
        "path": "data/database/job_hunt_tracker.db"
    },
    "uploads": {
        "path": "data/uploads",
        "allowed_extensions": [
            "pdf",
            "docx",
            "doc",
            "txt"
        ]
    },
    "job_tracking": {
        "weekly_goal": 5,
        "statuses": [
            "Applied",
            "No Response",
            "Rejected",
            "Screening Call",
            "Interview",
            "Second Interview",
            "Final Interview",
            "Offer",
            "Accepted",
            "Declined"
        ]
    },
    "study_tracking": {
    "daily_target_minutes": 0,
    "weekly_target_days": 5,
    "total_target_hours": 300,
    "test_date": "2025-07-16"
    },
    "ui": {
        "theme_color": "#4C78A8",
        "secondary_color": "#59A14F",
        "warning_color": "#E15759",
        "affirmations_enabled": true
    }
}